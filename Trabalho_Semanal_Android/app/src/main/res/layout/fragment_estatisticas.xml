<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a193532_c195741.ft.unicamp.br.aula03.puzzle.jogo2.EstatisticasFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Estatísticas dos Jogos"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="A) Pessoa mais errada: " />

            <TextView
                android:id="@+id/textErroImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="B) Pessoa botão mais errada: " />

            <TextView
                android:id="@+id/textErroBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="C) Porc. de Erro: " />

            <TextView
                android:id="@+id/textPorcent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="setar consulta" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nro. de jogos: " />

            <TextView
                android:id="@+id/textJogadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="setar consulta" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nro. de erros: " />

            <TextView
                android:id="@+id/textErros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="setar consulta" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
